{
  "name": "@pretty-cozy/root",
  "version": "0.9.0-alpha.5",
  "description": "Collection of pretty cozy utilities to make npm workflows easier",
  "author": "Pretty Coffee",
  "license": "MIT",
  "workspaces": [
    "packages/eslint-config",
    "packages/eslint-plugin",
    "packages/git-hooks",
    "packages/release-tools"
  ],
  "scripts": {
    "build": "npm run -ws --if-present build",
    "publish": "npm run build && node ./scripts/publish.js",
    "lint": "eslint",
    "lint:fix": "npm run lint -- --fix",
    "prepare": "cozy-git-hooks install --quiet"
  },
  "devDependencies": {
    "enquirer": "2.4.1",
    "eslint": "9.39.2",
    "glob": "13.0.0",
    "npm-run-all2": "8.0.4",
    "rimraf": "6.1.2",
    "typescript": "5.9.3"
  },
  "lint-staged": {
    "*.js": [
      "npm run lint:fix"
    ]
  }
}
